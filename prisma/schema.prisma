generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url = env("DATABASE_URL") // sqlite://./dev.db
}

model User {
  id Int @id @default(autoincrement())
  name String
  cpf String @unique
  email String @unique
  password String
  documentType String // COMMON or MERCHANT
  documentNumber String @unique
  balance Int @default(100000) // proposito de teste, só pra ter um saldo pra testar as transações
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Transaction {
  id String @id @default(uuid())
  value Int
  payerId String
  payeeId String
  status String // PENDING, SUCCESS, FAILED
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}